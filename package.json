{
  "name": "api-server",
  "version": "1.0.0",
  "description": "GraphQL Lambda server",
  "main": "index.js",
  "scripts": {
    "build": "tsc -p .",
    "lint": "tslint -p .",
    "clean": "rimraf lib dist serverless-output.yaml",
    "precommit": "npm run build && lint-staged && npm test",
    "test":
      "cross-env NODE_ENV=test nyc mocha --exit --require source-map-support/register --require ts-node/register --full-trace --trace-warnings --bail 'src/**/*.test.ts'",
    "package":
      "aws cloudformation package --template-file template.yaml --output-template-file serverless-output.yaml --s3-bucket graphql-api-server-lambda-function",
    "copy":
      "mkdir dist && cp -rf lib/* package*.json jwt-key jwt-key.pub config dist && cd dist && npm ci --production && cd -",
    "deploy":
      "npm run clean && npm run build && npm run copy && npm run package && aws cloudformation deploy --template-file serverless-output.yaml --stack-name graphql-api --capabilities CAPABILITY_IAM --no-fail-on-empty-changeset"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/telephone-rose/api-server.git"
  },
  "keywords": ["GraphQL", "Lambda", "Serverless"],
  "author": "Telephone Rose",
  "private": true,
  "bugs": {
    "url": "https://github.com/telephone-rose/api-server/issues"
  },
  "homepage": "https://github.com/telephone-rose/api-server#readme",
  "lint-staged": {
    "*.json": ["prettier --write --parser json", "git add"],
    "*.md": ["prettier --write --parser markdown", "git add"],
    "*.{grapql,gql}": ["prettier --write --parser graphql", "git add"],
    "*.ts": [
      "prettier --write --parser typescript",
      "npm run lint -- --fix",
      "git add"
    ]
  },
  "nyc": {
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["src/**/*.test.*", "src/__tests__/**/*"],
    "extension": [".ts", ".tsx"],
    "require": ["ts-node/register"],
    "reporter": ["text-summary", "html", "lcov"],
    "sourceMap": true,
    "instrument": true,
    "check-coverage": false,
    "lines": 80,
    "statements": 80,
    "functions": 80,
    "branches": 80
  },
  "dependencies": {
    "apollo-server-lambda": "^1.3.6",
    "aws-sdk": "^2.263.1",
    "graphql": "^0.13.2",
    "graphql-date": "^1.0.3",
    "ioredis": "^3.2.2",
    "pg": "^7.4.3",
    "raven": "^2.6.3",
    "sequelize": "^4.38.0",
    "source-map-support": "^0.5.6"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.7",
    "@types/aws-sdk": "^2.7.0",
    "@types/graphql": "^0.13.1",
    "@types/graphql-date": "^1.0.2",
    "@types/ioredis": "^3.2.9",
    "@types/mocha": "^5.2.3",
    "@types/node": "^10.3.5",
    "@types/raven": "^2.5.1",
    "@types/sequelize": "^4.27.23",
    "cross-env": "^5.2.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "prettier": "^1.13.5",
    "rimraf": "^2.6.2",
    "ts-node": "^7.0.0",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "typescript": "^2.9.2"
  }
}
